# Smart School Bus Tracking System - Environment Variables Example
# Copy this file to .env in the root directory and update the values

# Server Configuration
PORT=4000
NODE_ENV=development

# Frontend URL for CORS
FE_ORIGIN=http://localhost:3000,http://192.168.31.217:3000

# Database Configuration (MySQL)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_PASS=
DB_NAME=school_bus_system
DB_PORT=3306

# JWT Configuration
JWT_SECRET=change_me
JWT_REFRESH_SECRET=change_me_refresh
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Firebase Configuration (for push notifications & realtime sync)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_DB_URL=https://ssb-tracking-system-default-rtdb.asia-southeast1.firebasedatabase.app/

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Socket.IO Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:4000
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000

# Maps Provider
MAPS_PROVIDER=leaflet

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_here

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_TIMEOUT=30000

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE=10000
DB_POOL_ACQUIRE=60000
DB_POOL_EVICT=1000

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Notification Configuration
NOTIFICATION_ENABLED=true
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_PUSH_ENABLED=true

# Geofencing Configuration
GEOFENCE_RADIUS=60
GEOFENCE_CHECK_INTERVAL=30000

# Trip Configuration
TRIP_TIMEOUT=7200000
TRIP_CHECK_INTERVAL=60000

# Alert Configuration
ALERT_DELAY_THRESHOLD=300000
ALERT_CHECK_INTERVAL=60000

# Development Configuration
DEBUG_MODE=true
VERBOSE_LOGGING=true
MOCK_DATA_ENABLED=false

# Production Configuration (uncomment for production)
# NODE_ENV=production
# DEBUG_MODE=false
# VERBOSE_LOGGING=false
# MOCK_DATA_ENABLED=false