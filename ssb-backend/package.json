{
  "name": "ssb-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Smart School Bus Tracking System - Backend API",
  "main": "src/server.ts",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node src/server.js",
    "test": "jest --runInBand",
    "db:init": "mysql -u root -p school_bus_system < ../database/01_init_db_ver2.sql",
    "db:seed": "mysql -u root -p school_bus_system < ../database/02_sample_data.sql",
    "db:reset": "npm run db:init && npm run db:seed",
    "ws:demo": "node src/scripts/ws-demo.js",
    "ws:test": "node src/scripts/test_websocket.js",
    "rebuild:polyline": "tsx scripts/rebuild-polyline.ts",
    "export-postman": "node scripts/export-postman.js",
    "check:backend": "node scripts/check-backend.js",
    "check:env": "node scripts/check-env.js",
    "test": "jest --runInBand --testEnvironment=node",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix"
  },
  "keywords": [
    "school-bus",
    "tracking",
    "gps",
    "realtime",
    "nodejs",
    "express",
    "mysql",
    "firebase",
    "socket.io"
  ],
  "author": "SSB Development Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.2.2",
    "morgan": "^1.10.1",
    "mysql2": "^3.15.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "smart_school_bus_tracking_system": "file:..",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.19.24",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.1.10",
    "openapi-to-postmanv2": "^5.3.4",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
