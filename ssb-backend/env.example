# Smart School Bus Frontend - Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# Backend API Configuration
# =============================================================================
# Base URL for the Smart School Bus backend API
# Development: http://localhost:4000/api/v1
# Production: https://your-api-domain.com/api/v1
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000/api/v1
# Legacy: NEXT_PUBLIC_API_BASE (for backward compatibility)
NEXT_PUBLIC_API_BASE=http://localhost:4000/api/v1
# Legacy: NEXT_PUBLIC_API_URL (for backward compatibility)
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1

# =============================================================================
# Google Maps Configuration
# =============================================================================
# Google Maps JavaScript API Key (required)
# Get your key from: https://console.cloud.google.com/apis/credentials
# 
# Required APIs (enable in Google Cloud Console):
# - Maps JavaScript API
# - Directions API (proxied via backend)
# - Distance Matrix API (proxied via backend)
# - Geocoding API (proxied via backend)
# - Places API (used directly by frontend for Autocomplete)
# - Roads API (proxied via backend)
# 
# Note: Only Places API is called directly from frontend.
# All other APIs are proxied through backend for caching & rate limiting.
NEXT_PUBLIC_GMAPS_API_KEY=AIzaSyCzZTEXod98WD5j_3Vb4cCzy7-Ep6sFxa4

# =============================================================================
# Socket.IO Configuration
# =============================================================================
# WebSocket server URL for real-time updates
# Development: http://localhost:4000
# Production: https://your-socket-domain.com
# 
# Used for:
# - Real-time bus position updates (1-3s interval)
# - Trip status notifications
# - Student pickup/dropoff alerts
# - Approach stop events (proximity alerts)
# - Delay alerts
NEXT_PUBLIC_WS_URL=http://localhost:4000
# Legacy: NEXT_PUBLIC_SOCKET_URL (for backward compatibility)
NEXT_PUBLIC_SOCKET_URL=http://localhost:4000

# =============================================================================
# Optional Configuration
# =============================================================================
# Analytics (optional)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Feature flags (optional)
# NEXT_PUBLIC_ENABLE_MOCK_DATA=false
# NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

