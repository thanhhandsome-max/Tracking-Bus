# SSB Backend Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=secret
DB_NAME=school_bus_system

# JWT Configuration
JWT_SECRET=change_me
JWT_REFRESH_SECRET=change_me_refresh
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Frontend Configuration
# For LAN access, separate multiple origins with comma
# Example: FE_ORIGIN=http://localhost:3000,http://192.168.31.181:3000,http://10.110.249.34:3000
# Thêm tất cả IP của các máy client cần truy cập
FE_ORIGIN=http://localhost:3000,http://192.168.31.181:3000,http://10.110.249.34:3000

# Socket.IO Configuration (optional, defaults to FE_ORIGIN if not set)
# Phải giống với FE_ORIGIN
SOCKET_CORS_ORIGIN=http://localhost:3000,http://192.168.31.181:3000,http://10.110.249.34:3000

# Server Host (optional, defaults to 0.0.0.0 to allow LAN access)
# Set to localhost or 127.0.0.1 to only allow local connections
HOST=0.0.0.0

# API Configuration
API_PREFIX=/api/v1

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring (Optional)
SENTRY_DSN=
