    {
      "name": "Reports",
      "item": [
        {
          "name": "Get Bus Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reports/buses/stats",
              "host": ["{{baseUrl}}"],
              "path": ["reports", "buses", "stats"]
            },
            "description": "Retrieve bus performance statistics"
          },
          "response": []
        },
        {
          "name": "Get Trip Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reports/trips/stats",
              "host": ["{{baseUrl}}"],
              "path": ["reports", "trips", "stats"]
            },
            "description": "Retrieve trip performance statistics"
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-set token from login response",
          "if (pm.response && pm.response.json() && pm.response.json().data && pm.response.json().data.token) {",
          "    pm.collectionVariables.set('token', pm.response.json().data.token);",
          "}"
        ]
      }
    }
  ]
}
