    {
      "name": "Schedules",
      "item": [
        {
          "name": "Create Schedule",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"maTaiXe\": 1,\n  \"maXe\": 1,\n  \"gioBatDau\": \"2024-01-15T06:00:00Z\",\n  \"gioKetThuc\": \"2024-01-15T18:00:00Z\",\n  \"moTa\": \"Lịch trình buổi sáng\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/schedules",
              "host": ["{{baseUrl}}"],
              "path": ["schedules"]
            },
            "description": "Create a new schedule with conflict checking"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Trips",
      "item": [
        {
          "name": "Start Trip",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"gioBatDauThucTe\": \"2024-01-15T06:30:00Z\",\n  \"ghiChu\": \"Bắt đầu chuyến đi\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/trips/1/start",
              "host": ["{{baseUrl}}"],
              "path": ["trips", "1", "start"]
            },
            "description": "Start a scheduled trip"
          },
          "response": []
        },
        {
          "name": "End Trip",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"gioKetThucThucTe\": \"2024-01-15T17:30:00Z\",\n  \"ghiChu\": \"Kết thúc chuyến đi\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/trips/1/end",
              "host": ["{{baseUrl}}"],
